@{
    ViewData["Title"] = "Create / Edit";
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ExpenseTracker.Models.ViewModels.ExpenseFormViewModel
<div class="text-center">
    <h1 class="display-4">Create or Edit Expense</h1>    
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Expense" method="POST">
    <!-- <label>Id</label> -->
    <input class="form-control" type="hidden" name="Id"  placeholder="0" asp-for="@Model.Expense.Id"  />
    <label class="mt-4">Value $</label>
    <input class="form-control" type="number" step="0.01" name="Value"
            placeholder="0" asp-for="@Model.Expense.Value" min="0" max="1" step="0.01">."  />
    <label class="mt-4">Description</label>
    <input class="form-control" type="text"  name="Description"
           placeholder="Description" asp-for="@Model.Expense.Description"

    />
    <label class="mt-4">Category</label>
    <select class="form-control" asp-items="@Model.ExpenseCategories">

    </select>
    <button class="btn btn-primary mt-4" type="submit">OK</button>
</form>